<!-- Card Columns Example Social Feed-->
<div class="mb-0 mt-4">
  <i class="fa fa-newspaper-o"></i> Latest Articles</div>
<hr class="mt-2">
<div class="card-columns">
  <% items.forEach(function(item) { %>
    <div class="card mb-3">
      <a href="#">
        <img class="card-img-top img-fluid w-100" src="<%= item.image %>" alt="https://unsplash.it/700/450?image=610">
      </a>
      <div class="card-body">
        <h6 class="card-title mb-1"><a href="#"><%= item.title %></a></h6>
        <p class="card-text small"><!-- These waves are looking pretty good today! -->
          [<a href="/admin/articles/article-preview/<%= item.slug %>">read more</a>]
        </p>
        <p class="card-text small">Written by:
        <a href="#">Some User</a>
      </div>
      <hr class="my-0">
              <div class="card-body py-2 small">
                <a class="mr-3 d-inline-block" href="/admin/articles/edit-article/<%= item._id %>">
                  <i class="material-icons" style="font-size: 12px">border_color</i> Edit
                  </a>
                  <a class="mr-3 d-inline-block" href="/admin/articles/delete-article/<%= item._id %>">
                  <i class="material-icons" style="font-size: 15px">delete</i> Delete
                  </a>
              </div>
      <div class="card-footer small text-muted">Posted 32 mins ago</div>
    </div>
  <% }); %>